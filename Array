#include<iostream>
using namespace std;
int main()
{
	int n;
	cout<<"how many number you want to enter \n";
	cin>>n;
	int arr[n];
	cout<<"enter the number to find the largest and the smallest";
	for(int i=0;i<n;i++)
	{
		cin>>arr[i];
	}
	int Max=arr[0],Min=arr[0];
	for(int i=1;i<n;i++)
	{
		if(arr[i]>Max)
		Max=arr[i];
		if(arr[i]<Min)
		Min = arr[i];
	}
	cout<<"Max = "<<Max<<" Min = "<<Min;
	
	return 0;
}
